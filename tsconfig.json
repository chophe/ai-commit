{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "moduleResolution": "Node",
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["dist", "node_modules"]
}
